<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Vacancy" thread-count="1" parallel="false">

    <test name="Statuses" enabled="true" group-by-instances="true">
        <classes>
            <class name="vacancy.CreateDraftVacancyTest" />
            <class name="vacancy.CreateOnApprovalVacancyTest" />
            <class name="vacancy.CreateAndApproveVacancyTest" />
            <class name="vacancy.ArchiveStatusOfVacancyTest" />
        </classes>
    </test>

    <test name="Responses and Recommendations" enabled="true" group-by-instances="true">
        <classes>
            <class name="vacancy.VacancyResponseTest" />
            <class name="vacancy.VacancyRecommendationTest" />
        </classes>
    </test>

    <test name="Sharing" enabled="true" group-by-instances="true">
        <classes>
            <class name="vacancy.sharing.VacancySharingTest" />
            <class name="vacancy.sharing.ResponseSharingTest" />
            <class name="vacancy.sharing.RecommendationSharingTest" />
        </classes>
    </test>

    <test name="Validation" enabled="true" group-by-instances="true">
        <classes>
            <class name="vacancy.validation.ColleagueRecommendationFormValidationTest" />
            <class name="vacancy.validation.VacancyApplicationFormValidationTest" />
        </classes>
    </test>

    <test name="Actions" enabled="true" group-by-instances="true">
        <classes>
            <class name="vacancy.actions.archive.RecruiterCanceledVacancyActionsTest" />
            <class name="vacancy.actions.archive.RecruiterClosedVacancyActionsTest" />
            <class name="vacancy.actions.archive.RecruiterSuspendedVacancyActionsTest" />
            <class name="vacancy.actions.archive.SupervisorCanceledVacancyActionsTest" />
            <class name="vacancy.actions.archive.SupervisorClosedVacancyActionsTest" />
            <class name="vacancy.actions.archive.SupervisorSuspendedVacancyActionsTest" />

            <class name="vacancy.actions.draft.RecruiterDraftVacancyActionsTest" />
            <class name="vacancy.actions.draft.SupervisorDraftVacancyActionsTest" />

            <class name="vacancy.actions.onApproval.RecruiterOnApprovalVacancyActionsTest" />
            <class name="vacancy.actions.onApproval.SupervisorOnApprovalVacancyActionsTest" />

            <class name="vacancy.actions.open.RecruiterOpenVacancyActionsTest" />
            <class name="vacancy.actions.open.SupervisorOpenVacancyActionsTest" />
        </classes>
    </test>

</suite>
