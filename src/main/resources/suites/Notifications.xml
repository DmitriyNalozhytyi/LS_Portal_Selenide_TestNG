<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Notifications" thread-count="1" parallel="false">

    <listeners>
        <listener class-name="utils.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="Notifications" group-by-instances="true">
        <classes>
            <class name="notifications.vacancy.NewVacancyTest" />
            <class name="notifications.vacancy.NewResponseTest" />
            <class name="notifications.vacancy.NewRecommendationTest" />
            <class name="notifications.vacancy.ResponseViewedTest" />
            <class name="notifications.vacancy.RecommendViewedTest" />
            <class name="notifications.vacancy.ResponseRejectedTest" />
            <class name="notifications.vacancy.RecommendationRejectedTest" />
        </classes>
    </test>

</suite>
